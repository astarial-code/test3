<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.shopapp.ui.custom.UpperCaseHintTextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialogInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_content_space"
        android:theme="@style/TextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialogInput"
            style="@style/TextInputEditText"
            android:hint="@string/enter_quantity"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1" />

    </com.shopapp.ui.custom.UpperCaseHintTextInputLayout>

</FrameLayout>